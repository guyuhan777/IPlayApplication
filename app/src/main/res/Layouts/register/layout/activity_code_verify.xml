<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verify_layout"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入验证码"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:text="请输入我们发送到以下联系方式的验证码"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/verify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/black"
                android:text="+8615365363655,"/>
            <TextView
                android:id="@+id/resend_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/blue_hint"
                android:text="重发验证码"/>
        </LinearLayout>

        <EditText
            android:id="@+id/verify_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="验证码"
            android:inputType="number"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_bg"/>

        <Button
            android:id="@+id/getCode_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_button_bg"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/font_white"
            android:textStyle="bold"
            android:text="下一步"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">  
        </LinearLayout>  
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/seperateline_horizontal"/>
        <include layout="@layout/register_back_lv2" />
    </LinearLayout>
</RelativeLayout>
