<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:id="@+id/remark_up_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/activity_remark_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/remark_back"
                android:src="@drawable/yinyang"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/text_large"
                android:text="评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/activity_bottom_add_remark"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/link_to_somebody"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/yinyang"/>
        <ImageView
            android:id="@+id/add_remark"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/yinyang"/>
        <EditText
            android:id="@+id/remark_cotent"
            android:layout_toRightOf="@id/link_to_somebody"
            android:layout_toLeftOf="@id/add_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="评论"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/remark_recycler_view"
        android:layout_below="@id/remark_up_part"
        android:layout_above="@id/activity_bottom_add_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>