<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_main_surface" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/camera_title"
            android:layout_width="match_parent"
            android:background="@color/font_white"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/camera_back"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/black"
                android:text="×"/>
            <TextView
                android:id="@+id/camera_type_label"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/black"
                android:text="照片"/>
        </LinearLayout>
        <com.iplay.iplayapplication.customComponent.autoChangeImageView.SquareRelativeLayout
            android:id="@+id/camera_preview"
            android:layout_below="@id/camera_title"
            android:layout_width="match_parent"
            android:layout_height="0dp" >
            <ImageView
                android:id="@+id/camera_facce_change_button"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yinyang"/>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/camera_move_hint"
                    android:textColor="@color/font_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:elevation="1dp"
                    />
                <com.iplay.iplayapplication.customComponent.doubleWayProgressBar.BothWayProgressBar
                    android:id="@+id/camera_progress"
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />
            </LinearLayout>
        </com.iplay.iplayapplication.customComponent.autoChangeImageView.SquareRelativeLayout>
        <RelativeLayout
            android:id="@+id/cammera_bottom_nav"
            android:layout_below="@id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/font_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/take_photo_button"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/camera_photo_nav"
                    android:text="照片"
                    android:gravity="center"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/blue_hint"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/camera_video_nav"
                    android:textColor="@color/grey"
                    android:text="视频"
                    android:gravity="center"
                    android:textSize="@dimen/text_normal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>